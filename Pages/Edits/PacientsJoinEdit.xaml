<Page x:Class="Polyclinic.Pages.Edits.PacientsJoinEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Polyclinic.Pages.Edits"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PacientsJoinEdit">
    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0 0 5 0"/>
        </Style>
        <Style TargetType="Label" BasedOn="{StaticResource LabelDefault}">
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel x:Name="sp">
            <Label Content="Код приёма"/>
            <TextBox x:Name="tb1"/>
            <Label Content="Код врача"/>
            <TextBox x:Name="tb2"/>
            <Label Content="Код пациента"/>
            <TextBox x:Name="tb3"/>
            <Label Content="Дата приёма"/>
            <TextBox x:Name="tb4"/>
            <Label Content="Стоимость приёма"/>
            <TextBox x:Name="tb5"/>
            <Button HorizontalAlignment="Center" x:Name="Edit1" Click="Edit1_Click" Content="Изменить" Margin="0 10 0 0" Width="100"/>
        </StackPanel>
    </Grid>
</Page>
